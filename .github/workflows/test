name: workflow-call

on:
  push:
    branches: [ "testing" ]
  pull_request:
    branches: [ "testing" ]
  workflow_dispatch: 
    
jobs:

  job1:
    runs-on: ubuntu-latest    

    steps:
      - name: Set color
        env:
         test: "[192.168.0.1,192.168.0.2]"
        id: set-color-var
        run: echo "vapps=${{ env.test }}" >> "$GITHUB_OUTPUT"       
         
    outputs:
      vapps: ${{ steps.set-color-var.outputs.vapps }} 
                
  get-color:
    runs-on: windows-latest
    needs: job1
    strategy:
     matrix:
      host: ${{fromJSON(needs.job1.outputs.vapps)}}
  
    steps:
      - name: power & sleep
        run: echo "power & sleep ${{matrix.host}}"
 
